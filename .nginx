server {
listen 80;
listen 443 ssl;

server_name yourstuff4sale.com www.yourstuff4sale.com;

ssl_certificate     /etc/letsencrypt/live/yourstuff4sale.com/fullchain.pem;
ssl_certificate_key /etc/letsencrypt/live/yourstuff4sale.com/privkey.pem;

location / {
    proxy_pass http://localhost:8000;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
   }
}

server {
    listen 80;
    location / {
        proxy_pass http://192.168.1.20:8000;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}


